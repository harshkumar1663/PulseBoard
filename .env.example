DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Redis (set to localhost when running locally without Docker)
# REDIS_HOST=redis
# REDIS_PORT=6379
# Optional explicit Celery URLs (override auto-derived values)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1
